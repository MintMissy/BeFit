@model BeFit.Models.ExerciseRecord

@{
    ViewData["Title"] = "Dodaj wykonane ćwiczenie";
}

<h1>Dodaj wykonane ćwiczenie</h1>

<h4>Wykonane ćwiczenie</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="TrainingSessionId" class="form-label"></label>
                <select asp-for="TrainingSessionId" class="form-control" asp-items="ViewBag.TrainingSessionId"></select>
                <span asp-validation-for="TrainingSessionId" class="text-danger"></span>
                <small class="form-text text-muted">Wybierz sesję treningową, podczas której wykonano ćwiczenie</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ExerciseTypeId" class="form-label"></label>
                <select asp-for="ExerciseTypeId" class="form-control" asp-items="ViewBag.ExerciseTypeId"></select>
                <span asp-validation-for="ExerciseTypeId" class="text-danger"></span>
                <small class="form-text text-muted">Wybierz typ ćwiczenia</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Weight" class="form-label"></label>
                <input asp-for="Weight" class="form-control" type="number" step="0.5" />
                <span asp-validation-for="Weight" class="text-danger"></span>
                <small class="form-text text-muted">Podaj obciążenie w kilogramach (0-1000 kg)</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Sets" class="form-label"></label>
                <input asp-for="Sets" class="form-control" type="number" />
                <span asp-validation-for="Sets" class="text-danger"></span>
                <small class="form-text text-muted">Podaj liczbę serii (1-100)</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Repetitions" class="form-label"></label>
                <input asp-for="Repetitions" class="form-control" type="number" />
                <span asp-validation-for="Repetitions" class="text-danger"></span>
                <small class="form-text text-muted">Podaj liczbę powtórzeń w jednej serii (1-1000)</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
                <small class="form-text text-muted">Opcjonalne notatki dotyczące wykonanego ćwiczenia</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

