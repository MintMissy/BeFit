@model IEnumerable<BeFit.Models.ExerciseRecord>

@{
    ViewData["Title"] = "Moje ćwiczenia";
}

<h1>Moje wykonane ćwiczenia</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj wykonane ćwiczenie</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Data sesji
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repetitions)
            </th>
            <th>
                Łącznie powtórzeń
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.TrainingSession.StartDateTime.ToString("dd.MM.yyyy HH:mm")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight) kg
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repetitions)
            </td>
            <td>
                @(item.Sets * item.Repetitions)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>

