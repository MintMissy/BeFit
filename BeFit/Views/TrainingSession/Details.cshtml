@model BeFit.Models.TrainingSession

@{
    ViewData["Title"] = "Szczegóły sesji treningowej";
    var duration = Model.EndDateTime - Model.StartDateTime;
}

<h1>Szczegóły sesji treningowej</h1>

<div>
    <h4>Sesja treningowa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StartDateTime)
        </dt>
        <dd class="col-sm-9">
            @Model.StartDateTime.ToString("dd.MM.yyyy HH:mm")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EndDateTime)
        </dt>
        <dd class="col-sm-9">
            @Model.EndDateTime.ToString("dd.MM.yyyy HH:mm")
        </dd>
        <dt class="col-sm-3">
            Czas trwania
        </dt>
        <dd class="col-sm-9">
            @($"{(int)duration.TotalHours}h {duration.Minutes}min")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
    
    @if (Model.ExerciseRecords.Any())
    {
        <h5 class="mt-4">Wykonane ćwiczenia:</h5>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Ćwiczenie</th>
                    <th>Obciążenie (kg)</th>
                    <th>Serie</th>
                    <th>Powtórzenia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.ExerciseRecords)
                {
                    <tr>
                        <td>@record.ExerciseType.Name</td>
                        <td>@record.Weight</td>
                        <td>@record.Sets</td>
                        <td>@record.Repetitions</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="mt-4">Brak wykonanych ćwiczeń w tej sesji.</p>
    }
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>

