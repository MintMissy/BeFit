@model BeFit.Models.TrainingSession

@{
    ViewData["Title"] = "Edytuj sesję treningową";
}

<h1>Edytuj sesję treningową</h1>

<h4>Sesja treningowa</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="StartDateTime" class="form-label"></label>
                <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
                <small class="form-text text-muted">Podaj datę i godzinę rozpoczęcia treningu</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndDateTime" class="form-label"></label>
                <input asp-for="EndDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
                <small class="form-text text-muted">Podaj datę i godzinę zakończenia treningu</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
                <small class="form-text text-muted">Opcjonalne notatki dotyczące treningu</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

